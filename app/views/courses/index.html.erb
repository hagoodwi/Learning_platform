<div class="my-3 p-3 bg-body rounded shadow-sm">
  <div class="d-flex flex-wrap align-items-center pb-2 border-bottom">
    <h3 class=" pb-2 mb-0 col-12 col-lg-auto me-lg-auto">Курсы</h3>
    <div class="text-end">
      <%= button_to '+ Создать', new_course_path, :method => :get, type: "button", class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Название</th>
        <th scope="col">Даты проведения</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
        <tr>
          <td><%= label_tag "#{course.name}" %></td>
          <td><%= I18n.l(course.start_date) %> - <%= I18n.l(course.end_date) %></td>
          <td class="text-end">
            <div>
              <%= link_to 'Просмотр', course_path(course), class: "btn btn-outline-secondary btn-sm" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
