<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
  <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
    <p class="h1 mb-3 fw-bold">Создание курса</p>
  </ul>

  <div class="text-end">
    <%= button_to 'Отмена', courses_path, :method => :get, type: "button", class: "btn btn-outline-secondary" %>
  </div>
</div>

<%= form_for @course do |f| %>
  <div class="form-floating">
    <%= f.text_field :name, class: "form-control", id: "floatingInput", placeholder: ""  %>
    <%= f.label "Название", for: "floatingInput", class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= f.date_field :start_date, class: "form-control", id: "floatingInput", placeholder: ""  %>
    <%= f.label "Дата начала", for: "floatingInput", class: "form-label" %>
  </div>
 
  <div class="form-floating">
    <%= f.date_field :end_date, class: "form-control", id: "floatingInput", placeholder: ""  %>
    <%= f.label "Дата окончания", for: "floatingInput", class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= f.text_field :description, class: "form-control", id: "floatingInput", placeholder: ""  %>
    <%= f.label "Описание", for: "floatingInput", class: "form-label" %>
  </div>

  <%= f.submit 'Создать', class: "btn btn-primary w-100 py-2" %>
<% end %>