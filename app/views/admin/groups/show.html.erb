<%= render "admin/shared/nav" %>

<div class="my-3 p-3 bg-body rounded shadow-sm">
  <div>
    <div class="d-flex flex-wrap align-items-center pb-2">
      <h3 class="pb-2 mb-0 col-12 col-lg-auto me-lg-auto"><%= @group.name %></h3>
      <div class="text-end">
        <%= button_to 'Редактировать', edit_admin_group_path, :method => :get, type: "button", class: "btn btn-outline-secondary" %>
      </div>
    </div>
    <div class="lead">Описание: <%= @group.description %></div>
  </div>
</div>

<div class="my-3 p-3 bg-body rounded shadow-sm">
  <div class="d-flex flex-wrap align-items-center pb-2 border-bottom">
    <h5 class=" pb-2 mb-0 col-12 col-lg-auto me-lg-auto">Пользователи в группе</h5>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Фамилия</th>
        <th scope="col">Имя</th>
        <th scope="col">Отчество</th>
      </tr>
    </thead>
    <tbody>
    <% @users_in_group.each do |user| %>
        <tr>
          <td><%= label_tag "#{user.user_profile.last_name}" %></td>
          <td><%= label_tag "#{user.user_profile.first_name}" %></td>
          <td><%= label_tag "#{user.user_profile.second_name}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users_in_group %>
</div>
