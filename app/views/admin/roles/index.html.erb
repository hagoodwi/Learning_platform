<%= render "admin/shared/nav" %>

<!-- TODO: мб делать вывод не таблицей, а списком, как на странице просмотра всех пользователей -->
<div class="my-3 p-3 bg-body rounded shadow-sm">
  <div class="d-flex flex-wrap align-items-center pb-2 border-bottom">
    <h3 class=" pb-2 mb-0 col-12 col-lg-auto me-lg-auto">Список ролей</h3>
    <div class="text-end">
      <%= button_to '+ Создать', new_admin_role_path, :method => :get, type: "button", class: "btn btn-outline-secondary" %>
    </div>
  </div>
  
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Название</th>
      <th scope="col">Пользователи</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @roles.each do |role| %>
      <tr>
        <td><%= label_tag "#{role.name}" %></td>
        <td><%= label_tag "#{role.users.length}" %></td>
        <td class="text-end">
            <div class="dropdown">
              <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                Действия
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <!-- TODO: Реализовать функционал для редактирования ролей -->
                <%= link_to 'Редактировать', "#", class: "dropdown-item" %>
                <%= link_to 'Просмотр', admin_role_path(role), class: "dropdown-item"%>
                <!-- TODO: запретить удаление базовых ролей -->
                <%= link_to 'Удалить', admin_role_path(role), data: { "turbo-method": :delete, confirm: 'Вы уверены?'}, class: "dropdown-item"%>
              </ul>
            </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
