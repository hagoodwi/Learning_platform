<h1 class="h2 mb-3 fw-normal">Регистрация</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.email_field :email, class: "form-control", id: "floatingInput", autofocus: true, autocomplete: "email", placeholder: "" %>
    <%= f.label "email", for: "floatingInput", class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= f.text_field :last_name, class: "form-control", id: "floatingInput", placeholder: "" %>
    <%= f.label "Фамилия", for: "floatingInput", class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= f.text_field :first_name, class: "form-control", id: "floatingInput", placeholder: "" %>
    <%= f.label "Имя", for: "floatingInput", class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= f.text_field :second_name, class: "form-control", id: "floatingInput", placeholder: "" %>
    <%= f.label "Отчество", for: "floatingInput", class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingInput", placeholder: "" %>
    <%= f.label "Пароль", for: "floatingInput", class: "form-label" %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "floatingInput", placeholder: "" %>
    <%= f.label "Подтверждение пароля", for: "floatingInput", class: "form-label" %>
  </div>

  <p>
    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary w-100 py-2" %>
    </div>
  </p>

  
<% end %>